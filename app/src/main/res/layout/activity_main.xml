<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffff">

    <CheckBox
        android:id="@+id/dontDisturb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainScreen1"
        style="@style/Base.TextAppearance.AppCompat.Display1" />

    <CheckBox
        android:id="@+id/weekdays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainScreen2"
        android:layout_below="@+id/dontDisturb"
        style="@style/Base.TextAppearance.AppCompat.Display1" />

    <CheckBox
        android:id="@+id/weekends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainScreen3"
        android:layout_below="@+id/weekdays"
        style="@style/Base.TextAppearance.AppCompat.Display1" />

    <CheckBox
        android:id="@+id/onetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainScreen4"
        android:layout_below="@+id/weekends"
        style="@style/Base.TextAppearance.AppCompat.Display1"

    />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/onetime"
        android:text="@string/events"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1"
        android:text="@string/settings"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn2"
        android:text="@string/newProfile"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
